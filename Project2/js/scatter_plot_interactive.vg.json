{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "view": {
        "stroke": "beige"
    },
    "width": 400,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/TaoAstral/FIT3179/main/Week10hw/data/WHR_2023.csv"
    },
    "transform": [
        {
            "filter": "datum.gdp_per_capita > 0"
        },
        {
            "filter": "datum.social_support > 0"
        }
    ],
    "encoding": {
        "x": {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "title": "Gross Domestic Produc per capita",
            "axis": {
                "tickCount": 9
            },
            "scale": {
                "domain": [
                    0,
                    2.4
                ]
            }
        },
        "y": {
            "field": "social_support",
            "type": "quantitative",
            "title": "Social Support",
            "axis": {
                "tickCount": 9
            },
            "scale": {
                "domain": [
                    0,
                    1.8
                ]
            }
        }
    },
    "layer": [
        {
            "selection": {
                "state_highlight": {
                    "type": "multi",
                    "fields": [
                        "region"
                    ],
                    "bind": "legend"
                }
            },
            "mark": {
                "type": "circle",
                "size": 150
            },
            "encoding": {
                "color": {
                    "field": "region",
                    "type": "nominal",
                    "title": "Region",
                    "legend": {
                        
                        "orient": "left"
                    },
                    "scale": {
                        "domain": [
                            "Western Europe",
                            "Central and Eastern Europe",
                            "Middle East and North Africa",
                            "North America and ANZ",
                            "Commonwealth of Independent States",
                            "East Asia",
                            "Latin America and Caribbean",
                            "South Asia",
                            "Southeast Asia",
                            "Sub-Saharan Africa"
                        ],
                        "range": [
                            "#84B3B4",
                            "#E28882",
                            "#E38B3B",
                            "#5473a2",
                            "#A9A9A9",
                            "#A9A9A9",
                            "#A9A9A9",
                            "#A9A9A9",
                            "#A9A9A9",
                            "#A9A9A9"
                        ]
                    }
                },
                "opacity": {
                    "condition": {
                        "selection": "state_highlight",
                        "value": 0.6
                    },
                    "value": 0.1
                },
                "tooltip": [
                    {
                        "field": "country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "social_support",
                        "type": "quantitative",
                        "title": "Social Support"
                    },
                    {
                        "field": "gdp_per_capita",
                        "type": "quantitative",
                        "title": "Gross Domestic Produc per capita"
                    }
                ]
            }
        }
    ],
    "background": "beige"
}