{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 600,
    "title": "Quality of Life Indicators",
    "data": {
        "url": "https://raw.githubusercontent.com/TaoAstral/FIT3179/main/Week10hw/data/WHR_2023.csv"
    },
    "params": [
        {
            "name": "Happiness_score",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 8,
                "step": 0.1,
                "name": "Happiness Score: "
            }
        },
        {
            "name": "Region_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Western Europe",
                    "Sub-Saharan Africa",
                    "Southeast Asia",
                    "South Asia",
                    "North America and ANZ",
                    "Middle East and North Africa",
                    "Latin America and Caribbean",
                    "East Asia",
                    "Commonwealth of Independent States",
                    "Central and Eastern Europe"
                ],
                "labels": [
                    "All",
                    "Western Europe",
                    "Sub-Saharan Africa",
                    "Southeast Asia",
                    "South Asia",
                    "North America and ANZ",
                    "Middle East and North Africa",
                    "Latin America and Caribbean",
                    "East Asia",
                    "Commonwealth of Independent States",
                    "Central and Eastern Europe"
                ],
                "name": "Region Selection: "
            }
        }
    ],
    "transform": [
        {"filter": "datum.happiness_score > 0"},
        {"filter": "datum.gdp_per_capita > 0"},
        {"filter": "datum.social_support > 0"},
        {
            "filter": "datum.happiness_score > Happiness_score"
        },
        {
            "filter": "Region_selection == null || datum.region == Region_selection"
        }
    ],
    "encoding": {
        "x": {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "title": "Gross Domestic Product per Capita",
            "axis": {
                "tickCount": 9
            },
            "scale": {
                "domain": [
                    0.1,
                    2.4
                ]
            }
        },
        "y": {
            "field": "social_support",
            "type": "quantitative",
            "title": "Social Support",
            "axis": {
                "tickCount": 9
            },
            "scale": {
                "domain": [
                    0.1,
                    2
                ]
            }
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "happiness_score",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            2,
                            3,
                            4,
                            5,
                            6,
                            7
                        ],
                        "range": [
                            10,
                            50,
                            150,
                            200,
                            300,
                            400,
                            500
                        ]
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "color": {
                    "field": "region",
                    "type": "nominal"
                },
                "opacity": {
                    "value": 0.6
                },
                "tooltip": [
                    {
                        "field": "country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "gdp_per_capita",
                        "type": "quantitative",
                        "title": "GDP per Capita"
                    },
                    {
                        "field": "social_support",
                        "type": "quantitative",
                        "title": "Social Support"
                    },
                    {
                        "field": "happiness_score",
                        "type": "quantitative",
                        "title": "Happiness Score"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "country",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['country'] == 'China' || datum['country'] == 'Singapore' || datum['region'] == 'Australia' || datum['country'] == 'New Zealand' || datum['country'] == 'Italy' || datum['country'] == 'Yemen' ||  datum['country'] == 'United States'",
                        "value": 1
                    },
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "gdp_per_capita",
                        "type": "quantitative",
                        "title": "GDP per Capita"
                    },
                    {
                        "field": "social_support",
                        "type": "quantitative",
                        "title": "Social Support"
                    },
                    {
                        "field": "happiness_score",
                        "type": "quantitative",
                        "title": "Happiness Score"
                    }
                ]
            }
        }
    ]
}