{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "view": {
        "stroke": "beige"
    },
    "width": 700,
    "height": 450,
    "data": {
        "url": "https://raw.githubusercontent.com/TaoAstral/FIT3179/main/Project2/js/ne_110m.topojson",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "deepskyblue",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TaoAstral/FIT3179/main/Project2/js/7_others_oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TaoAstral/FIT3179/main/Project2/js/ne_110m.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/TaoAstral/FIT3179/main/Project2/data/WHR_2023_map.csv"
                        },
                        "key": "country",
                        "fields": [
                            "happiness_score"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "field": "happiness_score",
                    "type": "quantitative",
                    "scale": {
                        "type": "linear",
                        "domain": [
                            1,
                            2,
                            3,
                            4,
                            5,
                            6,
                            7,
                            8
                        ],
                        "range": [
                            "#D239DE",
                            "#D548BE",
                            "#D64DB6",
                            "#DC6392",
                            "#E17874",
                            "#E8974F",
                            "#EDA445",
                            "#F0AE42"
                        ]
                    },
                    "legend": {
                        "title": "Happiness score",
                        "direction": "horizontal",
                        "orient": "top-right",
                        "gradientLength": 300,
                        "titleFontSize": 15,
                        "titleColor": "black",
                        "padding": -20
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "happiness_score",
                        "type": "quantitative",
                        "title": "Happiness score"
                    }
                ]
            }
        }
    ],
    "background": "beige"
}