{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "view": {
        "stroke": "beige"
    },
    "width": 700,
    "height": 430,
    "data": {
        "url": "https://raw.githubusercontent.com/TaoAstral/FIT3179/main/Project2/js/ne_110m.topojson",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TaoAstral/FIT3179/main/Project2/js/7_others_oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TaoAstral/FIT3179/main/Project2/js/ne_110m.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/TaoAstral/FIT3179/main/Project2/data/WHR_2023_map.csv"
                        },
                        "key": "country",
                        "fields": [
                            "happiness_score"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "field": "happiness_score",
                    "type": "quantitative",
                    "scale": {
                        "type": "linear",
                        "domain": [
                            1,
                            2,
                            3,
                            4,
                            5,
                            6,
                            7,
                            8
                        ],
                        "range": [
                            "#FFF2D9",
                            "#FFE5AB",
                            "#FFD877",
                            "#FFC94A",
                            "#FFB71E",
                            "#F0AE42",
                            "#E0963E",
                            "#C07D3A"
                        ]
                    },
                    "legend": {
                        "title": "Happiness score",
                        "direction": "horizontal",
                        "orient": "bottom-left",
                        "gradientLength": 300,
                        "titleFontSize": 15,
                        "titleColor": "black",
                        "padding": -20
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "happiness_score",
                        "type": "quantitative",
                        "title": "Happiness score"
                    }
                ]
            }
        },
        {
            "transform": [
              {
                "calculate": "'Africa country has low; happiness scores.'",
                "as": "text_annotation_raw"
              },
              {
                "calculate": "split(datum.text_annotation_raw,';')",
                "as": "text_annotation"
              }
            ],
            "mark": {"type": "text", "dx": 60, "dy": 100},
            "encoding": {
              "text": {"field": "text_annotation"},
              "color": {"value": "#000000"},
              "size": {"value": 14}
            }
          }
    ],
    "background": "beige"
}